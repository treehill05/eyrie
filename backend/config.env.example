# ============================================================================
# Backend Configuration
# ============================================================================

# Server Host and Port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
RTC_PORT=8001


# RTC Server Port (WebRTC streaming server)
RTC_PORT=8001

# CORS - Frontend URL (where the client will run)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# STUN/TURN Server Configuration (WebRTC)
# ============================================================================

# STUN Server
STUN_URL=stun:stun.cloudflare.com:3478

# TURN Servers (comma-separated)
TURN_URLS=turn:turn.cloudflare.com:3478?transport=udp,turn:turn.cloudflare.com:3478?transport=tcp,turn:turn.cloudflare.com:80?transport=tcp,turns:turn.cloudflare.com:443?transport=tcp

# TURN Credentials (optional - leave empty for public STUN only)
TURN_USERNAME=
TURN_CREDENTIAL=

# ============================================================================
# YOLO Model Configuration
# ============================================================================

# Path to YOLO model file
MODEL_PATH=yolov8n.pt

# Detection confidence threshold (0.0 to 1.0)
DETECTION_CONFIDENCE=0.5

# ============================================================================
# Video Configuration
# ============================================================================

# Default video source: "camera" or "file"
DEFAULT_VIDEO_SOURCE=file

# Default camera ID (if using camera)
DEFAULT_CAMERA_ID=0

# Upload folder for video files
UPLOAD_FOLDER=upload

# Default video file (relative to upload folder)
DEFAULT_VIDEO_FILE=vecteezy_aerial-view-of-marathon-runners-on-the-streets-of-kyiv-ukraine_11539866.mp4

# Loop video by default
DEFAULT_LOOP_VIDEO=true
